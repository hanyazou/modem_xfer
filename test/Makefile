
SRC_DIR=../src

all: modem_test

modem_test: modem_test.c $(SRC_DIR)/modem_xfer.c $(SRC_DIR)/ymodem.c $(SRC_DIR)/modem_xfer.h $(SRC_DIR)/modem_xfer_debug.h
	cc -I$(SRC_DIR) -DDEBUG -o modem_test modem_test.c $(SRC_DIR)/modem_xfer.c $(SRC_DIR)/ymodem.c

test:: all
	pkill -a modem_test || true
	./modem_test &
	ls -l /tmp/modem_test-*
	sz --ymodem data/foo.txt data/bar.txt data/baz.dat < /tmp/modem_test-tx > /tmp/modem_test-rx
	err_count=0; \
	for i in foo.txt bar.txt baz.dat; do \
	    if diff $${i} data/$${i}; then \
	         echo ok $${i} ; \
	    else \
	         echo $${i} ERROR; \
	         shasum $${i} data/$${i}; \
	         hexdump -C data/$${i} > /tmp/modem_test_a; \
	         hexdump -C $${i} > /tmp/modem_test_b; \
	         diff -u /tmp/modem_test_a /tmp/modem_test_b; \
	        err_count=$$(( err_count + 1 )); \
	    fi \
	done; \
	echo ;\
	if [ $${err_count} == 0 ]; then \
	    echo OK;\
	else \
	    echo "some ERROR(s) were detected. Please check the result";\
	fi; \
	echo

clean::
	rm -f modem_test
